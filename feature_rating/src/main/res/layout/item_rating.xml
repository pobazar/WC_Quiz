<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/vRatingItemItemDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="40"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="6dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRatingItemUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/user_name"
                android:textAppearance="@style/main_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRatingItemDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:text="@string/date"
                android:textAppearance="@style/data_text" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRatingItemScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="start"
            android:text="@string/score_value"
            android:textAppearance="@style/main_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRatingItemCountRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="start"
            android:text="@string/count_right_percent_value"
            android:textAppearance="@style/main_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRatingItemTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center_horizontal"
            android:text="@string/time_value"
            android:textAppearance="@style/main_text" />
    </LinearLayout>
</LinearLayout>