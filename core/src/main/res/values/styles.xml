<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="colorPrimaryDark">@color/main_yellow</item>
        <item name="colorAccent">@color/pb_finish</item>
    </style>

    <style name="crimson_yellow">
        <item name="android:fontFamily">@font/crimson_text</item>
        <item name="android:textColor">@color/main_yellow</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="garamond_yellow">
        <item name="android:fontFamily">@font/eb_garamond</item>
        <item name="android:textColor">@color/main_yellow</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="toolbar_title">
        <item name="android:fontFamily">@font/eb_garamond</item>
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
